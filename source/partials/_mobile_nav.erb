<nav class="c-mobile-nav js-mobile-nav">
  <div class="c-mobile-nav__inner">
    <div class="o-container">

      <ul class="c-mobile-nav__list">
        <% data.menuElements.main_menu.each do |menuElement| %>
          <li class="c-mobile-nav__item">
            <a class="c-mobile-nav__link<%= (current_page.path.split('.')[0] == menuElement.href[1..-1] ? ' is-active"' : '') %>" href="<%= menuElement.href %>">
              <%= menuElement.title %>
            </a>
          </li>
        <% end %>
      </ul>

      <ul class="c-mobile-nav__list">
        <% data.menuElements.social_links.each do |menuElement| %>
          <li class="c-mobile-nav__item">
            <a class="c-mobile-nav__link c-mobile-nav__link--secondary o-media o-media--middle o-media--tight" href="<%= menuElement.href %>" target="_blank">
              <%= inline_svg("icons/#{menuElement.icon}.svg", class: "o-icon o-media__figure") %>
              <%= menuElement.title %>
            </a>
          </li>
        <% end %>
      </ul>

    </div>
  </div>
</nav>